doctype html
html(lang='en')
  head
    // Required meta tags
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    // Bootstrap CSS
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css', integrity='sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M', crossorigin='anonymous')
    title= title
  body
    .container
      .row
        .col
        .col-sm-9
          .jumbotron
            h1.display-3 Sign up to enter chatroom!
            p.lead
              | This is a simple chatroom for the CMU FSE homework1. 
              br
              |  Made by Liang Yu Pan
          form(method='POST' action='/signup')
            .form-group
              label(for='account') Account
              input#account.form-control(type='text', name='account', aria-describedby='accountHelp', placeholder='Enter account', required='')
              small#accountHelp.form-text.text-muted Account must be unique.
            .form-group
              label(for='password') Password
              input#password.form-control(type='password', name='password', placeholder='Password', required='')
            button.btn.btn-primary(type='submit') Register
            #alert.alert.alert-warning.alert-dismissible.fade(role='alert')
              button.close(type='button', data-dismiss='alert', aria-label='Close')
                span(aria-hidden='true') Ã—
              |             You should check in on some of those fields below.
        .col
    footer.footer
      .container
        // <span class="text-muted">Place sticky footer content here.</span>
    // Optional JavaScript
    // jQuery first, then Popper.js, then Bootstrap JS
    script(src='https://code.jquery.com/jquery-3.2.1.js', integrity='sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE=', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js', integrity='sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4', crossorigin='anonymous')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js', integrity='sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1', crossorigin='anonymous')
    script(type='text/javascript').
      if("#{error}" != ''){
        $('#alert').text("#{error}");
        $('#alert').addClass('show');
      }
